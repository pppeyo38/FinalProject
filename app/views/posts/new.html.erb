<div class="main posts-new">
  <div class="container">

    <h1 class="form-heading">新規投稿</h1>
    <%= form_tag("/posts/create", {multipart: true}) do %>
      <div class="form">
        <div class="form-body">

			    <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
           		<%= message %>
            </div>
          <% end %>

          <textarea name="cafe" placeholder="カフェの名前"><%= @post.cafe %></textarea>
          <textarea name="content" placeholder="どうだった？"><%= @post.content %></textarea>
          <p>画像</p>
          <input name="post_img" type="file">
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>

  </div>
</div>